{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "allowJs": false,

    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,

    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "./types",
    "outDir": "./lib"
  },
  
  "include": [
    "./src/**/*.ts"
  ]
}